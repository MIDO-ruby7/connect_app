<div class="w-screen">
  <div>
    <div id="board-id">
      <!-- 1 card -->
      <div class="relative bg-white py-6 px-6 rounded-3xl h-80 my-4 shadow-xl flex justify-center">
          <div class=" text-white flex items-center absolute rounded-full py-8 px-8 shadow-xl bg-pink-500 left-12 -top-6">
              <img class="w-16 h-16 rounded-full" src="https://imgproxy-us-east-2-new.icons8.com/7yFIqujYhgBIb9I57nNqNe0YHkrVx9sCQ6pTxtDADX4/rs:fit:256:267/czM6Ly9pY29uczgu/b3VjaC1wcm9kLmFz/c2V0cy9zdmcvNDAv/ZGM0NDVjN2ItYWQw/MC00ZGU0LWJhYmQt/MjNiMzJkMWM4YjIz/LnN2Zw.png/download?filename=transistor-man-looking-out-the-window.png" alt="Rounded avatar">
          </div>
            <div class="mt-8">
                <p class="text-lg font-semibold my-2 no-underline"><%= @board.title %></p>
                <div class="flex space-x-2 text-gray-400 text-sm">
                    <!-- svg  -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <p><%= @board.venue %></p>
                </div>
                <div class="flex space-x-2 text-gray-400 text-sm my-3">
                    <!-- svg  -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <p><% l @board.created_at, format: :short %></p> 
                </div>
                <div class="border-t-2">
                <%= @board.body %>
                </div>
                <%= render 'crud_menus' if current_user.own?(@board) %>
            </div>
      </div>
    </div>
  </div>
</div>
